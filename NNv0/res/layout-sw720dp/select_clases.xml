<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewtitulo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="@string/MO_titulo2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#33CCCC"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textViewdirectori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewtitulo"
        android:textStyle="bold"
        android:textSize="25dp"
        android:paddingTop="5dp"
        android:text="@string/MO_directorio" />
   
    <TextView 
        android:background="#000000"
 		android:id="@+id/lineaHorizontal"
 		android:layout_below="@+id/textViewdirectori"
  		android:layout_height="3dp"
  		android:layout_width="fill_parent"/>
    
    <TextView
        android:id="@+id/textViewClases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewdirectori"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="@string/MO_clases"
        android:paddingTop="5dp" />
   
    <TextView 
        android:background="#000000"
 		android:id="@+id/lineaHorizontal3"
 		android:layout_below="@+id/textViewClases"
  		android:layout_height="2dp"
  		android:layout_width="fill_parent"/>
	
	<ScrollView
  
	   android:layout_width="fill_parent"
	   android:layout_height="fill_parent"
	   android:layout_below="@+id/lineaHorizontal3"
	   android:layout_above="@+id/lineaHorizontal2">
    <LinearLayout
        android:id="@+id/Layoutont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="10dp"
        android:textSize="25dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">

    </LinearLayout>
    </ScrollView>

    
     <TextView 
        android:background="#000000"
 		android:id="@+id/lineaHorizontal2"
 		android:layout_above="@+id/menub"
  		android:layout_height="2dp"
  		android:layout_width="fill_parent"/>
     
     
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/menub"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/buttonback"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:background="@drawable/gradientbuttontablet"
            android:layout_alignParentLeft="true" 
            android:text="@string/MO_B1" />
        
        <Button
            android:id="@+id/buttonhecho"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:layout_toRightOf="@+id/buttonback"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gradientbuttontablet"
            android:text="@string/MO_B3" />
        
        <Button
            android:id="@+id/buttoncancel"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/buttonhecho"
            android:text="@string/MO_B4"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gradientbuttontablet"
            android:textSize="25dp" />

    </RelativeLayout>

    

</RelativeLayout>